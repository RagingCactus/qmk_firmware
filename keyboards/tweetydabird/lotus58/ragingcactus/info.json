{
    //
    // Most of this stuff should honestly be just in my keymap.
    // However, doing that caused compiler errors when I tried it, and I'm not
    // sure if they were my fault or not. As I do not have unlimited time,
    // this will have to suffice for now.
    //
    "maintainer": "RagingCactus",
    "features": {
        // Use RGB matrix instead of rgblight
        "rgblight": false,
        "rgb_matrix": true,
        "bootmagic": true,
        "encoder": true,
        "extrakey": true,
        "mousekey": true,
        "nkro": true,
        "oled": true,
        "tri_layer": true,
        "command": false,
        "console": false
    },
    "build": {
        // Debounce eagerly (report change immediately) to keep latency low
        //See https://michael.stapelberg.ch/posts/2021-05-08-keyboard-input-latency-qmk-kinesis/#eagerdebounce
        "debounce_type": "sym_eager_pk"
    },
    // Debounce reduces chatter (unintended double-presses) - set 0 if debouncing is not needed
    // In my testing with Gateron Box Ink v2 switches I need this to be at least 8ms
    // to reliably prevent chatter. However, this should be fine as it will only affect
    // the second state change as the algorithm sym_eager_pk is used. That means it will
    // immediately report the first state change it sees, but will suppress a second state
    // change for 10ms. I have never seen the keys bounce while not changing state, so
    // this should yield very nice behavior.
    "debounce": 10,

    "tapping": {
        "term": 200,
        "term_per_key": true,
        "permissive_hold": true,
        "hold_on_other_key_press": true
    },

    // TODO below
    "split": {
        "transport": {
            "watchdog": true,
            "watchdog_timeout": 2000
        },
        "usb_detect": {
            "timeout": 1000
        }
    },
    "usb": {
        // Be as compatible as possible
        "force_nkro": false,
        "polling_interval": 1
        // TODO below
    },

    "rgb_matrix": {
